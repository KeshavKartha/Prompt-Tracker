{
    "manifest_version": 3,
    "name": "Prompt Tracker",
    "version": "1.1.0",
    "description": "Tracks your prompts within ChatGPT conversations for easy navigation.",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["sidebar.html", "templates.html", "icons.html"],
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "utils.js",
                "ui.js",
                "main.js"
            ],
            "run_at": "document_idle"
        }
    ]
}